-#%h1 Rejestracja nowego usera
%section.form_signup
  %h4 Sign up
  %hr
  =form_for @user do |form|
    .form_element
      %h3.form_label Type your name
      =form.text_field :name, :placeholder => 'Nickname is fine too'
    .form_element
      %h3.form_label Type your email address 
      =form.text_field :email, :placeholder => 'Email address'
